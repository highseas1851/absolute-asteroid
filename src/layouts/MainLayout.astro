---
// 1. Import your styles here once
import '../styles/global.css';

// 2. Accept a title prop to make it dynamic for each page
const { title = "My Website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Nav/Header can go here (shared across all pages) nice  -->
    <nav>
		<a href="/src/pages/index">indexa</a>
	</nav>

    <main>
      <slot /> <!-- Page content from index.astro etc. goes here -->
    </main>

    <!-- Footer can go here -->
    <footer>
		<p>&copy; 2026 TPM</p>
	</footer>
  </body>
</html>
